<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" type="text/css">
    <title>Contacts</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>View and Enter Contacts</h3>
                <form action='/create_contact' method='post'>
                    <div class="form-group">
                        <label for='contact_name'>Name</label>
                        <input name='contact_name' class="form-control" type='text'>
                    </div>

                    <div class="form-group">
                        <label for='street_address'>Street Address</label>
                        <input name='street_address' class="form-control" type='text'>
                    </div>

                    <div class="form-group">
                        <label for='city_state_zip'>City State Zip</label>
                        <input name='city_state_zip' class="form-control" type='text'>
                    </div>

                    <div class="form-group">
                        <label for='phone'>Phone</label>
                        <input name='phone' class="form-control" type='text'>
                    </div>

                    <button type='submit' class="btn btn-primary">Add Contact</button>
                </form>

                <br><br>
                <form action='/delete_contacts' method='post'>
                    <button type='submit' class="btn btn-danger">Delete All Contacts</button>
                </form>
            </div> <!-- End Col -->

            <div class="col-md-6">
                {% if contacts is empty %}
                    <h3>No contacts in list</h3>
                {% endif %}
                {% if contacts is not empty %}
                    <h3>Contact List:</h3>
                    <ul>
                        {% for contact in contacts %}
                        <li>
                            <p>
                                {{ contact.getName }}
                                {% if contact.getStreetAddress is not empty %}
                                    <br>{{ contact.getStreetAddress }}
                                {% endif %}
                                {% if contact.getCityStateZip is not empty %}
                                    <br>{{ contact.getCityStateZip }}
                                {% endif %}
                                {% if contact.getPhone is not empty %}
                                    <br>{{ contact.getPhone }}
                                {% endif %}
                            </p>
                        </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div> <!-- End Col -->
        </div> <!-- End Row -->
    </div> <!-- End Container -->
</body>
</html>
